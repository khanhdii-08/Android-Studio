<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backgrourd">



    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02A809"
        android:gravity="center"
        android:text="PLAYER A"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewA1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/imageViewA2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c5" />

        <ImageView
            android:id="@+id/imageViewA3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c6" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA1509"
        android:gravity="center"
        android:text="PLAYER B"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewB1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/imageViewB2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c5" />

        <ImageView
            android:id="@+id/imageViewB3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/c6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/id_awin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#02A809"
            android:gravity="center"
            android:text="PLAYER A : 0"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/id_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="#0C86E6"
            android:gravity="center"
            android:text="DRAWN :0"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/id_bwin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BA1509"
            android:gravity="center"
            android:text="PLAYER B: 0"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <TimePicker
        android:id="@+id/id_timePicker"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:background="@color/white"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="7dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_Star"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#02A809"
        android:text="Star" />
    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#C80707"
        android:text="Cancel" />

</LinearLayout>