<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoockActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThoÃ¡t"
        android:layout_gravity="right"/>

    <EditText
        android:id="@+id/id_Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter id of book"/>

    <EditText
        android:id="@+id/id_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter title"/>
    <EditText
        android:id="@+id/id_Author_Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter id author"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/id_Select_Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Select"/>
        <Button
            android:id="@+id/id_Save_Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Save"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="delete"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="update"/>

    </LinearLayout>

    <GridView
        android:id="@+id/gridViewListBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"/>

</LinearLayout>